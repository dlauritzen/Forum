{# The recursive breadcrumb creator #}
{% if forum.parent is not null %}
{% include 'DLauritzForumContentBundle:Index:breadcrumb_rec.html.twig' with { 'forum' : forum.parent, 'first' : false } %}
{% endif %}
{% if first %}
	<li>
		<a href="{{ path('forum_view', { 'forum' : forum.id }) }}">{{ forum.name }}</a>
		<span class="divider">/</span>
	</li>
{% else %}
	<li>{{ forum.name }}</li>
{% endif %}