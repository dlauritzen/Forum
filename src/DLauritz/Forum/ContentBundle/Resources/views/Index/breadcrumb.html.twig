<ul class="breadcrumb">

{# Index #}
	<li {% if index is defined %}class="active"{% endif %}>
		<a href="{{ path('index') }}"><i class="icon-home"></i></a>
		{% if index is not defined %}<span class="divider">/</span>{% endif %}
	</li>

{# Category #}
{% if category is defined %}
	<li {% if first %}class="active"{% endif %}>
		<a href="{{ path('category_view', {'id': category.id}) }}">{{ category.name }}</a>
		{% if not first %}<span class="divider">/</span>{% endif %}
	</li>
{% endif %}

{# Forums (recursive) #}
{% if forum is defined %}
{% include 'DLauritzForumContentBundle:Index:breadcrumb_rec.html.twig' with { 'forum' : forum, 'first' : thread is not defined } %}
{% endif %}

{# Thread #}
{% if thread is defined %}
	<li>{{ thread.name }}</li>
{% endif %}

</ul>