{# The recursive breadcrumb creator #}
{% if forum.parent is not null %}
{% include 'DLauritzForumContentBundle:Index:breadcrumb_rec.html.twig' with { 'forum' : forum.parent, 'first' : false } %}
{% else %}
	<li>
		<a href="{{ path('category_view', {'id': forum.category.id}) }}">{{ forum.category.name }}</a>
		<span class="divider">/</span>
	</li>
{% endif %}
	<li {% if first %}class="active"{%endif %}>
		<a href="{{ path('forum_view', { 'id' : forum.id }) }}">{{ forum.name }}</a>
		{% if not first %}<span class="divider">/</span>{% endif %}
	</li>